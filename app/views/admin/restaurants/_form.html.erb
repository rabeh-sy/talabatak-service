<%= form_with(model: [:admin, restaurant], class: "contents") do |form| %>
  <% if restaurant.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul class="list-disc ml-6">
        <% restaurant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": restaurant.errors[:name].none?, "border-red-400 focus:outline-red-600": restaurant.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": restaurant.errors[:description].none?, "border-red-400 focus:outline-red-600": restaurant.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.select :status,
        Restaurant.status.values.map { |v| [v.text, v] },
        {},
        class: [
          "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
          restaurant.errors[:status].none? ? "border-gray-400 focus:outline-blue-600" : "border-red-400 focus:outline-red-600"
        ] %>
  </div>

  <div class="my-5">
    <%= form.label :primary_field %>
    <%= form.select :primary_field,
          Restaurant.primary_field.values.map { |v| [v.text, v] },
          { prompt: "Select required field" },
          class: [
            "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
            { "border-gray-400 focus:outline-blue-600": restaurant.errors[:primary_field].none?,
              "border-red-400 focus:outline-red-600": restaurant.errors[:primary_field].any? }
          ] %>
  </div>

  <div class="my-5">
    <%= form.label :secondary_field %>
    <%= form.select :secondary_field,
          Restaurant.secondary_field.values.map { |v| [v.text, v] },
          { prompt: "Select optional field" },
          class: [
            "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
            { "border-gray-400 focus:outline-blue-600": restaurant.errors[:secondary_field].none?,
              "border-red-400 focus:outline-red-600": restaurant.errors[:secondary_field].any? }
          ] %>
  </div>

  <div class="my-5">
    <%= form.label :view_mode %>
    <%= form.select :view_mode,
          Restaurant.view_mode.values.map { |v| [v.text, v] },
          { prompt: "Select optional field" },
          class: [
            "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
            { "border-gray-400 focus:outline-blue-600": restaurant.errors[:view_mode].none?,
              "border-red-400 focus:outline-red-600": restaurant.errors[:view_mode].any? }
          ] %>
  </div>

  <div class="my-5">
    <%= form.label :theme_color %>
    <%= form.select :theme_color,
          Restaurant.theme_color.values.map { |v| [v.text, v] },
          { prompt: "Select optional field" },
          class: [
            "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
            { "border-gray-400 focus:outline-blue-600": restaurant.errors[:theme_color].none?,
              "border-red-400 focus:outline-red-600": restaurant.errors[:theme_color].any? }
          ] %>
  </div>

  <div class="my-5">
    <%= form.label :logo %>
    <%= form.file_field :logo, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": restaurant.errors[:logo].none?, "border-red-400 focus:outline-red-600": restaurant.errors[:logo].any?}] %>
    <% if restaurant.logo.attached? %>
      <div class="mt-2">
        <%= image_tag restaurant.logo, class: "w-32 h-32 object-cover rounded-md" %>
      </div>
    <% end %>
  </div>

  <h3>Menu Items</h3>

  <%= form.fields_for :menu_items do |menu_item_fields| %>
    <div class="my-3 border p-2 rounded">
      <%= menu_item_fields.label :name %>
      <%= menu_item_fields.text_field :name, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>

      <%= menu_item_fields.label :description %>
      <%= menu_item_fields.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full border-gray-400 focus:outline-blue-600"] %>

      <%= menu_item_fields.label :price %>
      <%= menu_item_fields.number_field :price, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>

      <%= menu_item_fields.label :category %>
      <%= menu_item_fields.select :category,
          MenuItem.category.values.map { |v| [v.text, v] },
          {},
          class: [
            "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full border-gray-400 focus:outline-blue-600"
          ] %>

      <%= menu_item_fields.check_box :available %>
      <%= menu_item_fields.label :available %>

      <%= menu_item_fields.check_box :_destroy %>
      <%= menu_item_fields.label :_destroy, "Remove this donation" %>
    </div>
  <% end %>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
